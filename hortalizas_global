#!/usr/bin/env python3
import subprocess
import sys
import os

# Get the directory where the hortalizas app is located
script_dir = "/home/fratq/test/apps/hortalizas"
hortalizas_script = os.path.join(script_dir, "hortalizas.py")
python_executable = "/home/fratq/test/apps/.venv/bin/python"

# Execute the hortalizas.py script with the virtual environment python
try:
    subprocess.run([python_executable, hortalizas_script] + sys.argv[1:], check=True)
except FileNotFoundError:
    print(f"Error: Could not find {hortalizas_script}")
    sys.exit(1)
except subprocess.CalledProcessError as e:
    sys.exit(e.returncode)
